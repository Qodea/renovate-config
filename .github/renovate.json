{
  "baseBranches": ["main"],
  "configMigration": true,
  "extends": ["config:best-practices"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "groupName": "{{manager}} non-major dependencies",
      "groupSlug": "{{manager}}-non-major",
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "rebaseWhen": "conflicted"
}
